<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget Buddy"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#228B22"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:backgroundTint="#083A08"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonFromDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonToDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To"
            android:layout_marginStart="4dp"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonPresetWeek"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Week"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonPresetMonth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month"
            android:layout_marginStart="4dp"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonPresetYear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Year"
            android:layout_marginStart="4dp"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonPresetAllTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All time"
            android:layout_marginStart="4dp"
            android:backgroundTint="#083A08"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textTotalRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total spent for the selected dates: $0.00"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#228B22"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/editMonthlyBudget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Set Monthly Budget" />

        <Button
            android:id="@+id/buttonSetBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textRemainingBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Remaining Budget: $0.00"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#083A08"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textHighestCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Highest Spending Category: None"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#083A08"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonShowSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Summary"
        android:layout_marginTop="8dp"
        android:backgroundTint="#083A08"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/buttonShowExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All Expenses"
        android:layout_marginTop="4dp"
        android:backgroundTint="#083A08"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search by title or category" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginStart="4dp"
            android:backgroundTint="#083A08"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinnerSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/sort_options"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonExportCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export All to CSV"
        android:backgroundTint="#083A08"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/buttonViewCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View CSV"
        android:layout_marginTop="4dp"
        android:backgroundTint="#083A08"
        android:textColor="#FFFFFF"/>

</LinearLayout>
