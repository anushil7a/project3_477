<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home" />

    <!-- From / To row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonFromDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From" />

        <Button
            android:id="@+id/buttonToDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Week / Month / Year / All Time row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonPresetWeek"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Week" />

        <Button
            android:id="@+id/buttonPresetMonth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Month"
            android:layout_marginStart="4dp" />

        <Button
            android:id="@+id/buttonPresetYear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Year"
            android:layout_marginStart="4dp" />

        <Button
            android:id="@+id/buttonPresetAllTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All time"
            android:layout_marginStart="4dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textTotalRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total spent for the selected dates: $0.00"
        android:textStyle="bold"
        android:textSize="20sp" />

    <!-- Show Summary toggle -->
    <Button
        android:id="@+id/buttonShowSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Summary"
        android:layout_marginTop="8dp" />

    <!-- Show Expenses toggle -->
    <Button
        android:id="@+id/buttonShowExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All Expenses"
        android:layout_marginTop="4dp" />

    <!-- Search row (for expenses, hidden initially) -->
    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search by title or category" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Category summary list (hidden until Show Summary) -->
    <ListView
        android:id="@+id/listSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- All expenses list (hidden until Show Expenses) -->
    <ListView
        android:id="@+id/listExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Optional: keep export + view CSV at bottom -->
    <Button
        android:id="@+id/buttonExportCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export All to CSV" />

    <Button
        android:id="@+id/buttonViewCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View CSV"
        android:layout_marginTop="4dp" />

</LinearLayout>
